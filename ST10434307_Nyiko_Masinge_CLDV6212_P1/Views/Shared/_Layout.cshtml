@* File: Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10434307_Nyiko_Masinge_CLDV6212_P1</title>

    <!--
    Code attribution
    https://learn.microsoft.com/en-us/aspnet/core/mvc/views/layout?view=aspnetcore-8.0
    accessed 7 October 2025
     -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-Zo7X7qO9hrKXQk5XcHDf0Pcf4G5xK1He2v8BMuTUM3QxE1U+qgW01dTgEge0H3h+Z+Jd3B6Sgq2Lb3b3h7Y9Wg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10434307_Nyiko_Masinge_CLDV6212_P1.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- 
        Code Attribution 
        https://getbootstrap.com/docs/5.3/components/navbar/
        accessed 7 October 2025

    -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Home" asp-action="Index">
                    ABC Retail Admin
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Customer" asp-action="Index">
                                <i class="fas fa-users"></i> Manage Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-box-open"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Customer" asp-action="Log">
                                <i class="fas fa-clipboard-list"></i> Audit Log
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-semibold" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - ABC Retail Management System |
            <a asp-controller="Home" asp-action="Privacy" class="text-warning text-decoration-none">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!--  Styling -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar-brand {
            letter-spacing: 0.5px;
            font-size: 1.2rem;
        }

        .nav-link {
            transition: color 0.2s ease-in-out;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        footer {
            background-color: #212529;
            color: #adb5bd;
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</body>
</html>
