<div class="container mt-5">
    <h2 class="text-center mb-4">Customer List</h2>

    <div class="mb-3 text-center">
        <a class="btn btn-success" asp-action="Create">
            <i class="fas fa-plus-circle"></i> Add New Customer
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">Profile Picture</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th class="text-center">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img src="@customer.PhotoURL" class="img-thumbnail rounded-circle" style="width:60px;height:60px;object-fit:cover;" />
                        </td>
                        <td>@customer.Name @customer.Surname</td>
                        <td>@customer.Email</td>
                        <td>@customer.PhoneNumber</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-partitionKey="@customer.PartitionKey" asp-route-rowKey="@customer.RowKey" class="btn btn-info btn-sm me-1">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Edit" asp-route-partitionKey="@customer.PartitionKey" asp-route-rowKey="@customer.RowKey" class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-partitionKey="@customer.PartitionKey" asp-route-rowKey="@customer.RowKey" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



