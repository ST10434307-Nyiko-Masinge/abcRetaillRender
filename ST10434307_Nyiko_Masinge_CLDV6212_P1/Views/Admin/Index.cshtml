@model ST10434307_Nyiko_Masinge_CLDV6212_P1.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="admin-dashboard">
    <h2 class="mb-4"><i class="fas fa-tachometer-alt"></i> Dashboard</h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-primary">
                    <i class="fas fa-box-open"></i>
                </div>
                <div class="stat-info">
                    <h3>@Model.TotalProducts</h3>
                    <p>Total Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-success">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <h3>@Model.ActiveProducts</h3>
                    <p>Active Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-warning">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <div class="stat-info">
                    <h3>@Model.TotalOrders</h3>
                    <p>Total Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-info">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-info">
                    <h3>@Model.TotalCustomers</h3>
                    <p>Total Customers</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="dashboard-card">
                <h4><i class="fas fa-chart-line"></i> Revenue</h4>
                <h2 class="text-success">R @Model.TotalRevenue.ToString("F2")</h2>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card">
                <h4><i class="fas fa-clock"></i> Pending Orders</h4>
                <h2 class="text-warning">@Model.PendingOrders</h2>
            </div>
        </div>
    </div>

    <div class="dashboard-card">
        <h4><i class="fas fa-list"></i> Recent Orders</h4>
        @if (Model.RecentOrders.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr>
                            <td>@order.RowKey</td>
                            <td>@order.UserEmail</td>
                            <td>@order.OrderDate.ToString("g")</td>
                            <td>R @order.TotalAmount.ToString("F2")</td>
                            <td><span class="badge bg-@(order.Status == "Pending" ? "warning" : order.Status == "Shipped" ? "info" : order.Status == "Delivered" ? "success" : "secondary")">@order.Status</span></td>
                            <td><a asp-action="OrderDetails" asp-route-id="@order.RowKey" class="btn btn-sm btn-primary">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No recent orders.</p>
        }
    </div>
</div>

