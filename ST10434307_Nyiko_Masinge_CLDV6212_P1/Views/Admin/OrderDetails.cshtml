@model ST10434307_Nyiko_Masinge_CLDV6212_P1.Models.Order
@{
    ViewData["Title"] = "Order Details";
    Layout = "_AdminLayout";
    var orderItems = ViewBag.OrderItems as List<ST10434307_Nyiko_Masinge_CLDV6212_P1.Models.CartItem> ?? new List<ST10434307_Nyiko_Masinge_CLDV6212_P1.Models.CartItem>();
}

<div class="admin-page">
    <h2>Order Details</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4>Order Information</h4>
                    <p><strong>Order Number:</strong> @Model.RowKey</p>
                    <p><strong>Customer:</strong> @Model.UserEmail</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
                    <p><strong>Status:</strong> <span class="badge bg-@(Model.Status == "Pending" ? "warning" : Model.Status == "Shipped" ? "info" : Model.Status == "Delivered" ? "success" : "secondary")">@Model.Status</span></p>

                    <h5 class="mt-4">Shipping Address</h5>
                    <p>
                        @Model.ShippingAddress<br>
                        @Model.ShippingCity, @Model.ShippingPostalCode<br>
                        @Model.ShippingCountry
                    </p>

                    <h5 class="mt-4">Order Items</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in orderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>R @item.Price.ToString("F2")</td>
                                    <td>R @item.Subtotal.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3">Total</th>
                                <th>R @Model.TotalAmount.ToString("F2")</th>
                            </tr>
                        </tfoot>
                    </table>

                    <h5 class="mt-4">Update Status</h5>
                    <form asp-action="UpdateOrderStatus" method="post">
                        <input type="hidden" name="id" value="@Model.RowKey" />
                        <div class="row">
                            <div class="col-md-6">
                                <select name="status" class="form-select">
                                    <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                                    <option value="Processing" selected="@(Model.Status == "Processing")">Processing</option>
                                    <option value="Shipped" selected="@(Model.Status == "Shipped")">Shipped</option>
                                    <option value="Delivered" selected="@(Model.Status == "Delivered")">Delivered</option>
                                    <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary">Update Status</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Orders" class="btn btn-outline-secondary">Back to Orders</a>
    </div>
</div>

