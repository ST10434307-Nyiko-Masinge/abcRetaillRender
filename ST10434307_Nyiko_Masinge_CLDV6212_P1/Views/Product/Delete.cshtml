@model ST10434307_Nyiko_Masinge_CLDV6212_P1.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <h2 class="text-danger"><i class="fas fa-trash"></i> Delete Product</h2>
    <h3>Are you sure you want to delete this product?</h3>

    <div class="card mt-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Category</dt>
                <dd class="col-sm-10">@Model.Category</dd>

                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">R @Model.Price.ToString("F2")</dd>

                <dt class="col-sm-2">Stock</dt>
                <dd class="col-sm-10">@Model.StockQuantity</dd>
            </dl>

            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <img src="@Model.ImageURL" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px;" />
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="RowKey" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

