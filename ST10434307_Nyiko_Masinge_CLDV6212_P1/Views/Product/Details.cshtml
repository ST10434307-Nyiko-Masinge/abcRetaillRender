@model ST10434307_Nyiko_Masinge_CLDV6212_P1.Models.Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

<div class="admin-page">
    <h2>Product Details</h2>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <img src="@Model.ImageURL" alt="@Model.Name" class="img-fluid" />
                    }
                </div>
                <div class="col-md-6">
                    <h3>@Model.Name</h3>
                    <p><strong>Category:</strong> @Model.Category</p>
                    <p><strong>Price:</strong> R @Model.Price.ToString("F2")</p>
                    <p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
                    <p><strong>Status:</strong> 
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </p>
                    <p><strong>Description:</strong></p>
                    <p>@Model.Description</p>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.RowKey" class="btn btn-danger">Delete</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

